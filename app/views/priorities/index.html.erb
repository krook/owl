<div id="priorities">
	<div class="container">
		<div class="row">
			<div class="col-sm-10 col-sm-offset-1">
				<h1>Priorities</h1>
				<p>Below are the listed priorities for a given event.</p>
				<%= form_for @newpriority do |f| %>
					<%= f.text_field :name, class: "form-control", placeholder: "Priority Name" %>
					<%= f.text_field :level, class: "form-control", placeholder: "Priority Level" %>
					<%= f.collection_select(:incident_id, Incident.all, :id, :name) %>
					<%= f.text_field :details, class: "form-control", placeholder: "Priority Details" %>
					<%= f.submit %>
				<% end %>
				<h3>All Priorities</h3>
				<% @priorities.each do |p| %>
					<h5><%= p.name %></h5>
					<p><%= p.level %></p>
					<p><%= Incident.find(p.incident_id).name %></p>
					<p><%= p.details %></p>
				<% end %>
			</div>
		</div>
	</div>
</div>