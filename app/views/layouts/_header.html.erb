<header id="header">
	<div class="container">
		
	</div>
	<% if signed_in? %>
		<div class="status-bar">
			<div class="container-fluid">
				<div class="row">
					<div class="col-sm-3">
						<a href="/home" class="logo"><img class="logo" src="/assets/owl_logo_tight_light.png" /></a>
					</div>
					<div class="col-sm-7">
						<div class="status-info">
							<% @i = current_user.incident.to_s %>
							<div class="user-incident <% if @i == "" %>out <% end %>"><% if current_user.incident.to_s != "" %><%= Incident.find(current_user.incident).name %><% end %></div>
							<p>Hi <%= current_user.username %>, it's <%= DateTime.now.strftime("%l:%M %p") %></p>
						</div>
					</div>
					<div class="col-sm-2">
						
					</div>
				</div>
			</div>
		</div>
	<% end %>
</header>



