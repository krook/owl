<div class="notifications-container">
	<div class="notifications">
		<h3>Notifications</h3>
		<div class="notifications-list">

			<% @notifications.each do |f| %>
				<% @diff = ((Time.now - f.created_at)/60).round %>
				<% unless @diff > 150 %>
					<div class="notification <% if @diff < 5 %>active <% end %>" id="<%= f.id %>">
						<% @c = f.content.to_s %>
						<% if @c.include?(" :twitter") %>
							<% @c = @c.gsub(" :twitter") %>
							<div class="twitter"><i class="fab fa-twitter"></i></div>
						<% end %>
						<div class="info">
							<h4><%= f.title.to_s %></h4>
							<p><%= truncate(f.content.to_s, length: 45) %></p>
						</div>
						<div class="time">
							<p><span><%= @diff+1 %></span>mins</p>
						</div>
					</div>
				<% end %>
			<% end %>

