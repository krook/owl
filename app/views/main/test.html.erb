<script type="text/javascript">
	
	$("a.analyzetone").on("click", function() {
		var text = $(".api.tone .form-control").val()
		$.get("/analyzetone?text=" + text,function() {
			$(".response-tone").detach().appendTo(".api.tone .response")
		})
	})

	$("a.visualizer").on("click", function() {
		var text = $(".api.visual .form-control").val()
		$.get("/visualizer",function() {
			$(".response-visual").detach().appendTo(".api.visual .response")
		})
	})

</script>